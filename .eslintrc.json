{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "plugin:@typescript-eslint/recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
		"semi": ["error", "always"],
		"indent": ["error", "tab"],
		"no-trailing-spaces": "error",
		"padded-blocks": ["error", "never"],
		"space-infix-ops": "error",
		"space-before-function-paren": "error"
    }
}
